---
import '@styles/global.css'
import { Image } from 'astro:assets'
import myImage from '../assets/me.jpg';
import Links from './Links.astro';


---
<style>
  .aboutme-text {
    width: fit-content;
    height: fit-content;
    padding: 2rem;
    border-color: var(--accent-color-secondary);
    border-width: 2px;
    border-style: solid;
    background-color: var(--foreground-color);
    margin: 3rem;
  }

  p {
    font-size: 1.25rem;
    line-height: 2rem;
  }
  
  h1 {
    font-size: 2rem;
  }

  .aboutme-image {
    border-color: var(--accent-color-primary);
    border-style: solid;
    border-width: 2px;
    width: fit-content;
    height: auto;
  }

  @media (width < 900px) {
    .aboutme {
      display: flex;
      flex-direction: column;
    }
  }

