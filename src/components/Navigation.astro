---
interface NavLink {
  text: string;
  link: string;
}


const internalLinks: NavLink[] = [
  {
    text: "Home",
    link: "/"
  },
  {
    text: "Resume",
    link: "/resume"
  }
];
---
<style>
  .navbar {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--foreground-color);
    border-bottom: solid var(--accent-color-secondary) 2px;
    position: sticky;
    top: 0;
    overflow: hidden;
    z-index: 100;
    width: 100%;
  }

  ul {
    list-style-type: none;
    padding: 0;
  }

  li + li {
    margin-left: 1rem;
  }

  li {
    display: inline-block; 
  }

  .navbar-link {
    all: unset;
    padding-left: 2rem;
    padding-right: 2rem;
    padding-top: 1rem;
    padding-bottom: 1rem;
    border-style: solid;
    border-color: var(--accent-color-secondary);
    border-width: 2px;
    color: var(--accent-color-secondary);
  }

  .navbar-link:hover {
    border-color: var(--accent-color-primary);
    color: var(--accent-color-primary);
  }

</style>
<nav class="navbar">
  <ul>
    {internalLinks.map(link => <li><a class="navbar-link" href={link.link}>{link.text}</a></li>)}
  </ul>
</nav>
